<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PetCare - Nuevo Horario</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header-with-back">
            <a href="/" class="btn-back">
                ‚Üê
            </a>
            <h1>Nuevo Horario</h1>
        </div>

        <div class="card">
            <form action="/agregar-horario" method="POST" class="fancy-form">
                <div class="form-group">
                    <label for="horario">Horario de dispensado</label>
                    <div class="time-input-container">
                        <span>üïí</span>
                        <input type="time" 
                               id="horario" 
                               name="horario" 
                               required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="cantidad">Cantidad de Comida:</label>
                    <div class="cantidad-options">
                        <label class="cantidad-option">
                            <input type="radio" name="cantidad" value="50" required>
                            <span class="option-text">
                                <strong>Peque√±a</strong>
                                <small>50g</small>
                            </span>
                        </label>
                        
                        <label class="cantidad-option">
                            <input type="radio" name="cantidad" value="150">
                            <span class="option-text">
                                <strong>Mediana</strong>
                                <small>150g</small>
                            </span>
                        </label>
                        
                        <label class="cantidad-option">
                            <input type="radio" name="cantidad" value="300">
                            <span class="option-text">
                                <strong>Grande</strong>
                                <small>300g</small>
                            </span>
                        </label>
                        
                        <label class="cantidad-option">
                            <input type="radio" name="cantidad" value="500">
                            <span class="option-text">
                                <strong>Muy Grande</strong>
                                <small>500g</small>
                            </span>
                        </label>
                    </div>
                </div>
                
                <div class="form-actions">
                    <a href="/" class="btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
    // Script para validar que los minutos sean m√∫ltiplos de 5
    document.querySelector('form').onsubmit = function(e) {
        const timeInput = document.getElementById('horario');
        const minutes = parseInt(timeInput.value.split(':')[1]);
        
        if (minutes % 5 !== 0) {
            alert('Por favor, seleccione los minutos en intervalos de 5 minutos');
            e.preventDefault();
        }
    };
    </script>
</body>
</html> 