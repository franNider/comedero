<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PetCare - Nuevo Horario</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header-with-back">
            <a href="/" class="btn-back">
                ‚Üê
            </a>
            <h1>Nuevo Horario</h1>
        </div>

        <div class="card">
            <form action="/agregar-horario" method="POST" class="fancy-form">
                <div class="form-group">
                    <label for="horario">Horario de dispensado</label>
                    <div class="time-input-container">
                        <span>üïí</span>
                        <input type="time" 
                               id="horario" 
                               name="horario" 
                               required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="cantidad">Cantidad de alimento</label>
                    <div class="cantidad-container">
                        <span>ü•£</span>
                        <input type="number" 
                               id="cantidad" 
                               name="cantidad" 
                               min="1"
                               max="500" 
                               placeholder="Ingrese la cantidad (m√°x. 500)"
                               required>
                        <span class="unidad">gramos</span>
                    </div>
                </div>
                
                <div class="form-actions">
                    <a href="/" class="btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
    // Script para validar que los minutos sean m√∫ltiplos de 5
    document.querySelector('form').onsubmit = function(e) {
        const timeInput = document.getElementById('horario');
        const minutes = parseInt(timeInput.value.split(':')[1]);
        
        if (minutes % 5 !== 0) {
            alert('Por favor, seleccione los minutos en intervalos de 5 minutos');
            e.preventDefault();
        }
    };
    </script>
</body>
</html> 