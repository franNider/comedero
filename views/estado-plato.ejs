<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estado del Comedero - PetCare</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Estado del Comedero</h1>
        
        <div class="estado-container">
            <!-- Estado del Plato -->
            <div class="estado-card">
                <h2>Plato de Comida</h2>
                <div id="contenidoPlato">
                    <div class="cantidad-actual" id="cantidadPlato">
                        Cargando...
                    </div>
                    <div class="ultima-actualizacion" id="ultimaActualizacionPlato">
                        Última actualización: --:--
                    </div>
                </div>
            </div>

            <!-- Estado del Dispensador -->
            <div class="estado-card">
                <h2>Dispensador</h2>
                <div id="contenidoDispensador">
                    <div class="cantidad-actual" id="cantidadDispensador">
                        Cargando...
                    </div>
                    <div class="ultima-actualizacion" id="ultimaActualizacionDispensador">
                        Última actualización: --:--
                    </div>
                </div>
            </div>
        </div>

        <div class="actions">
            <a href="/" class="btn-back">Volver al Inicio</a>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        
        socket.on('actualizacionEstado', (datos) => {
            // Actualizar plato
            document.getElementById('cantidadPlato').textContent = '${datos.cantidadPlato}g';
            document.getElementById('ultimaActualizacionPlato').textContent = 
                'Última actualización: ${new Date().toLocaleTimeString()}';
            
            // Actualizar dispensador
            document.getElementById('cantidadDispensador').textContent = '${datos.cantidadDispensador}g';
            document.getElementById('ultimaActualizacionDispensador').textContent = 
                'Última actualización: ${new Date().toLocaleTimeString()}';
        });
    </script>
</body>
</html>